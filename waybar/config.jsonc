// -*- mode: jsonc -*-
{
  "reload_style_on_change": true,
  // "layer": "top", // Waybar at top layer
  //"position": "bottom", // Waybar position (top|bottom|left|right)
  "height": 30, // Waybar height (to be removed for auto height)
  "width": 800, // Waybar width
  "spacing": 2, // Gaps between modules (4px)

  // Choose the order of the modules
  "modules-left": [
    "custom/launch_wofi",
    "custom/mpv",
    "custom/dolphin",
    "hyprland/workspaces"
  ],
  "modules-center": [
    "hyprland/mode",
    "hyprland/scratchpad",
  ],
  "modules-right": [
    "tray",
    "pulseaudio",
    "network",
    "clock",
    "custom/power"
  ],
  // Modules configuration
  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "warp-on-scroll": false,
    "format": "{name}: {icon}",
    "format-icons": {
      "active": "ÔÜí",
      "urgent": "ÔÅ™",
      "focused": "ÔÜí",
      "default": "ÔÑë"
    }
  },
  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "ÔÄ£",
      "unlocked": "ÔÇú"
    }
  },
  "hyprland/mode": {
    "format": "<span style=\"italic\">{}</span>"
  },
  "hyprland/scratchpad": {
    "format": "{icon} {count}",
    "show-empty": false,
    "format-icons": [
      "",
      "Ôãí"
    ],
    "tooltip": true,
    "tooltip-format": "{app}: {title}"
  },
  "mpris": {
    "format": "{artist} - {title}",
    "ignored-players": [
      "firefox"
    ],
    "interval": 1,
    "tooltip": false
  },
  "custom/media": {
    "format": "üéµ",
    "tooltip": false,
    "menu": "on-click",
    "menu-file": "$HOME/.config/waybar/media_menu.xml",
    "menu-actions": {
      "play-pause": "playerctl play-pause",
      "next": "playerctl next",
      "previous": "playerctl previous"
    }
  },
  "tray": {
    // "icon-size": 21,
    "spacing": 10
    // "icons": {
    //   "blueman": "bluetooth",
    //   "TelegramDesktop": "$HOME/.local/share/icons/hicolor/16x16/apps/telegram.png"
    // }
  },
  "clock": {
    "format": "{:%H:%M} ÔÄó",
    "format-alt": "{:L%A, %B %d, %Y (%R)} ",
    "tooltip-format": "\n<span size='9pt' >{calendar}</span>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },
  /* "clock": {
    // "timezone": "America/New_York",
    "format": "{:%H:%M %d/%m | %a}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt> "
  },
  "cpu": {
    "format": "{usage}% Ôãõ",
    "tooltip": false
  },
  */
