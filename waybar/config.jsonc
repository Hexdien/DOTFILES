  "spacing": 2, // Gaps between modules (4px)
  // Choose the order of the modules
  "modules-left": [
    "hyprland/window"
  ],
  "modules-center": [
    "hyprland/workspaces",
    "hyprland/mode",
    "hyprland/scratchpad",
    "custom/media"
  ],
  "modules-right": [
    "pulseaudio",
    "cpu",
    "memory",
    "keyboard-state",
    "clock",
    "custom/power"
